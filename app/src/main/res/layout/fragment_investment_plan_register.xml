                android:layout_height="30dp"
                android:background="@drawable/spiner_icon"
                app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


